.new_event
  = simple_form_for Event.new, html: { class: 'form-horizontal' } do |f|
    .row
      .col-sm-12
        .text-xs-center
          = f.input :occurred_at, label: false
      .col-sm-12
        .text-xs-center
          = f.input :activity, label: false, as: :radio_buttons_inline
      .col-sm-12
        .text-xs-center
          = f.input :modifier, label: false, as: :radio_buttons_inline
    .row
      -# .col-sm-12
        -# = f.input :comments, as: :text, label: false
      .col-sm-12
        = f.submit "Good Boy!", clasS: "btn btn-success btn-block btn-lg"
